<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NadekoUpdater.ViewModels.Controls"
             xmlns:dd="using:NadekoUpdater.DesignData.Controls"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="33"
             x:Class="NadekoUpdater.Views.Controls.UriInputBar"
             x:DataType="vm:UriInputBarViewModel">

    <Design.DataContext>
        <dd:DesignUriInputBarViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto" ColumnDefinitions="*,Auto,Auto" ShowGridLines="True">
        <TextBox Grid.Column="0" Margin="0 0 2 0" Name="TextBox" Text="{Binding CurrentUri}" />
        <Button Grid.Column="1" Margin="2 0 2 0" Name="BrowseButton" Content="Browse"
                Command="{Binding SelectFolderAsync}"/>
        <Button Grid.Column="2" Margin="2 0 0 0" Name="OpenButton" Content="Open" IsEnabled="{Binding IsDirectoryValid}"
                Command="{Binding OpenFolder}" CommandParameter="{Binding CurrentUri}" />
    </Grid>
</UserControl>
