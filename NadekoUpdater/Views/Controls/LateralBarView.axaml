<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NadekoUpdater.ViewModels.Controls"
             xmlns:dd="using:NadekoUpdater.DesignData.Controls"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="450"
             x:Class="NadekoUpdater.Views.Controls.LateralBarView"
             x:DataType="vm:LateralBarViewModel">

    <Design.DataContext>
        <dd:DesignLateralBarViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*" ShowGridLines="True">
        <StackPanel Grid.Row="0">
            <!--Home button-->
            <Button Name="HomeButton" Content="Home Button" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        
            <!--Visual separator-->
            <Separator HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        
            <!--Button that adds new bot buttons-->
            <Button Content="Add Bot Button" Command="{Binding AddBotButtonAsync}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

        <!--Scroll bar with bot buttons-->
        <ScrollViewer Grid.Row="1" VerticalAlignment="Stretch">
            <ItemsRepeater ItemsSource="{Binding BotButtonList}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5,0,0">
                            <Button Click="LoadBotViewModel" Content="{Binding Content}" HorizontalAlignment="Center" VerticalAlignment="Top" />
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>
        
        <!--Configurations button-->
        <Button Name="ConfigButton" Grid.Row="2" Content="â—¯" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>

</UserControl>