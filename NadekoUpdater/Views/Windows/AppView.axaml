<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:NadekoUpdater.ViewModels.Windows"
        xmlns:const="using:NadekoUpdater.Common"
        xmlns:dd="using:NadekoUpdater.DesignData.Windows"
        mc:Ignorable="d"
        d:DesignWidth="{x:Static const:WindowConstants.DefaultWindowWidth}"
        d:DesignHeight="{x:Static const:WindowConstants.DefaultWindowHeight}"
        x:Class="NadekoUpdater.Views.Windows.AppView"
        x:DataType="vm:AppViewModel"
        Icon="/Assets/nadekoupdatericon.ico"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static const:WindowConstants.WindowTitle}"
        Width="{x:Static const:WindowConstants.DefaultWindowWidth}"
        Height="{x:Static const:WindowConstants.DefaultWindowHeight}"
        MinWidth="540"
        MinHeight="450">

    <Design.DataContext>
        <dd:DesignAppViewModel/>
    </Design.DataContext>

    <!--Add vertical and horizontal scrolling bars when the window is too small-->
        <Grid RowDefinitions="*" ColumnDefinitions="65,*" ShowGridLines="True">
            <!--Left Lateral Bar-->
            <ContentControl Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Content="{Binding LateralBarInstance}" />

            <!--View-->
            <ContentControl Grid.Row="0" Grid.Column="1" Content="{Binding ContentViewModel}" Padding="5 0 5 0" />
        </Grid>
</Window>