<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:NadekoUpdater.ViewModels"
        mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="200"
        x:Class="NadekoUpdater.Views.DialogWindowView"
        x:DataType="vm:DialogWindowViewModel"
        Title="{Binding Title}"
        Icon="/Assets/nadekoupdatericon.ico"
        WindowStartupLocation="CenterOwner"
        Height="200"
        Width="320">

    <Grid RowDefinitions="*,*,60" ColumnDefinitions="*" ShowGridLines="True">
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Text="{Binding Message}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Grid.Row="2" Grid.Column="0" Content="Ok" Command="{Binding CloseWindow}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>

</Window>
