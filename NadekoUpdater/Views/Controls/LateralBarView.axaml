<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:siv="https://github.com/kekyo/SkiaImageView"
             xmlns:vm="using:NadekoUpdater.ViewModels.Controls"
             xmlns:dd="using:NadekoUpdater.DesignData.Controls"
             xmlns:const="using:NadekoUpdater.Common"
             mc:Ignorable="d" d:DesignWidth="70" d:DesignHeight="450"
             x:Class="NadekoUpdater.Views.Controls.LateralBarView"
             x:DataType="vm:LateralBarViewModel">

    <Design.DataContext>
        <dd:DesignLateralBarViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*" Background="{DynamicResource LightBackground}" ShowGridLines="False">
        <StackPanel Grid.Row="0">
            <!--Home button-->
            <Button Classes="transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                     Name="HomeButton" Content="ðŸ " FontSize="18"/>
        
            <!--Visual separator-->
            <Separator HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        
            <!--Button that adds new bot buttons-->
            <Border Classes="circular" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Classes="accent" Command="{Binding AddBotButtonAsync}" Content="+"
                        PointerEntered="BotButtonHover" PointerExited="BotButtonUnhover"/>
            </Border>
        </StackPanel>

        <!--Scroll bar with bot buttons-->
        <ScrollViewer Grid.Row="1" VerticalAlignment="Stretch">
            <ItemsRepeater Name="ButtonList" ItemsSource="{Binding BotButtonList}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Transparent" ClipToBounds="True" BorderThickness="3" CornerRadius="4" Margin="5,5,5,0">
                            <Panel AttachedToVisualTree="OnBotButtonLoad" PointerEntered="BotButtonHover" PointerExited="BotButtonUnhover">
                                <siv:SKImageView Stretch="UniformToFill" />
                                <Button Click="LoadBotViewModel" Content="{Binding Content}" Opacity="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            </Panel>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>
        
        <!--Configurations button-->
        <Button Name="ConfigButton" Grid.Row="2" Content="â—¯" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
    </Grid>

</UserControl>