<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NadekoUpdater.ViewModels"
             mc:Ignorable="d" d:DesignWidth="110" d:DesignHeight="400"
             x:Class="NadekoUpdater.Views.BotListView"
             x:DataType="vm:BotListViewModel">

    <ItemsRepeater ItemsSource="{Binding BotButtonList}">
        <ItemsRepeater.ItemTemplate>
            <DataTemplate>
                <Border Margin="0,5,0,0">
                    <Button Content="{Binding Content}" HorizontalAlignment="Center" VerticalAlignment="Top" />
                </Border>
            </DataTemplate>
        </ItemsRepeater.ItemTemplate>
    </ItemsRepeater>

</UserControl>
