<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NadekoHub.ViewModels.Controls"
             xmlns:dd="using:NadekoHub.DesignData.Controls"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="250"
             x:Class="NadekoHub.Views.Controls.FakeConsole"
             x:DataType="vm:FakeConsoleViewModel">
    <Design.DataContext>
        <dd:DesignFakeConsoleViewModel/>
    </Design.DataContext>

    <TextBox Classes="console"
             Text="{Binding Content}"
             Watermark="{Binding Watermark}"
             CaretIndex="{Binding Content.Length}" />

</UserControl>
