<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NadekoUpdater.ViewModels.Controls"
             xmlns:const="using:NadekoUpdater.Common"
             xmlns:dd="using:NadekoUpdater.DesignData.Controls"
             mc:Ignorable="d"
             d:DesignWidth="{x:Static const:WindowConstants.MinWindowWidth}"
             d:DesignHeight="{x:Static const:WindowConstants.MinWindowHeight}"
             x:Class="NadekoUpdater.Views.Controls.HomeView"
             x:DataType="vm:HomeViewModel">
    <Design.DataContext>
        <dd:DesignHomeViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,40,*,*,30" ColumnDefinitions="*,*,*,*,*" ShowGridLines="True">
        <!--Center Banner-->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nadeko Avatar" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Text="Welcome to NadekoBot v4" FontSize="28" FontStyle="Oblique" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!--Center Buttons-->
        <Button Grid.Row="1" Grid.Column="0" Content="Commands" HorizontalAlignment="Center" VerticalAlignment="Center"
                Command="{Binding OpenUrl}" CommandParameter="https://nadeko.bot/commands"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Suggest" HorizontalAlignment="Center" VerticalAlignment="Center"
                Command="{Binding OpenUrl}" CommandParameter="https://suggest.nadeko.bot/"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Docs" HorizontalAlignment="Center" VerticalAlignment="Center"
                Command="{Binding OpenUrl}" CommandParameter="https://nadekobot.readthedocs.io/en/v4/"/>
        <Button Grid.Row="1" Grid.Column="3" Content="Support" HorizontalAlignment="Center" VerticalAlignment="Center"
                Command="{Binding OpenUrl}" CommandParameter="https://invite.nadeko.bot/"/>
        <Button Grid.Row="1" Grid.Column="4" Content="Embeds" HorizontalAlignment="Center" VerticalAlignment="Center"
                Command="{Binding OpenUrl}" CommandParameter="https://eb.nadeko.bot/"/>

        <!--Center Instructions-->
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Text="Pick a bot on the left to get started." FontSize="22" FontStyle="Oblique" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Text="Don't see any bot? Click on the plus button to add a new one." HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!--Bottom Buttons-->
        <Button Grid.Row="5" Grid.Column="0" Content="Tip me on Paypal" HorizontalAlignment="Center" VerticalAlignment="Center"
                 Command="{Binding OpenUrl}" CommandParameter="https://paypal.me/kwoth"/>
        <Button Grid.Row="5" Grid.Column="1" Content="Support on Patreon" HorizontalAlignment="Center" VerticalAlignment="Center"
                 Command="{Binding OpenUrl}" CommandParameter="https://patreon.com/nadekobot"/>
        <TextBlock Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="3" Text="Thank You â™¡" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
